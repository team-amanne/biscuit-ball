<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.amanne.biscuitball.mybatis.ILegendDAO">
	<!-- 	public List<RegionDTO> getRegionList(); // 광역시/도 조회 -->
	<select id="getRegionList" resultType="com.amanne.biscuitball.mybatis.RegionDTO">
		SELECT REGION_CODE, REGION_NAME
		FROM TBL_REGION
	</select>	
	
	<!-- 	public List<CityDTO> getCityList(String regionCode); // 시군구 조회 -->
	<select id="getCityList" 	
		parameterType="java.lang.String"
		resultType="com.amanne.biscuitball.mybatis.CityDTO">
		SELECT CITY_CODE, CITY_NAME, REGION_CODE
		FROM TBL_CITY
		WHERE REGION_CODE = #{regionCode}
	</select>
	
</mapper>
